<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants' />

    <ui:style>
        .container {
            max-height: 250px;
        }

        .scrollPanel {
            max-height: 150px;
            margin-right: -14px;
            margin-left: -14px;
            margin-bottom: -10px;
            margin-top: 5px;
        }

        .listItems {
            display: inherit;
            position: relative;
            box-shadow: none;
            background-clip: inherit;
            border-width: 0px;
            width: 100%;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.container}">
        <b:InputGroup>
            <b:TextBox ui:field="searchBox" placeholder="{constants.typeToSearchPlaceHolder}" />
            <b:InputGroupButton>
                <b:Button ui:field="searchButton" icon="SEARCH"/>
            </b:InputGroupButton>
        </b:InputGroup>
        <g:ScrollPanel addStyleNames="{style.scrollPanel}">
            <b:DropDownMenu ui:field="menu" addStyleNames="{style.listItems}"/>
        </g:ScrollPanel>
    </g:FlowPanel>
</ui:UiBinder>
